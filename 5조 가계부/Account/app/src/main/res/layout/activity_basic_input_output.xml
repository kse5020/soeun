<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/basicbackground">


    <FrameLayout
        android:id="@+id/bio_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AddInput"
            android:layout_marginTop="10dp"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/basicinputbtn"
            android:textSize="20dp" />


        <Button
            android:id="@+id/AddOutput"
            android:layout_marginTop="10dp"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:background="@drawable/basicoutputbtn"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0,1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Input1"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textColor="#ffffff"
                        android:textColorHint="#778899"
                        android:hint="11월용돈 : 300000 , 분류 : 용돈"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/DeleteInput1"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Input2"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:hint="용돈"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/DeleteInput2"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Input3"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textColor="#ffffff"
                        android:hint="용돈"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/DeleteInput3"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Input4"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textColor="#ffffff"
                        android:hint="용돈"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/DeleteInput4"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Input5"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textColor="#ffffff"
                        android:hint="용돈"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/DeleteInput5"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"
                        android:visibility="gone" />
                </TableRow>

            </TableLayout>

        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0,1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Output1"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textColorHint="#778899"
                        android:hint="치킨값 : 20000 , 분류 : 식비"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>

                    <Button
                        android:id="@+id/DeleteOutput1"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:textColorHint= "#646496"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Output2"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textColor="#ffffff"
                        android:hint="치킨값"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/DeleteOutput2"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Output3"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textColor="#ffffff"
                        android:hint="치킨값"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/DeleteOutput3"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Output4"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:textColor="#ffffff"
                        android:hint="치킨값"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/DeleteOutput4"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Output5"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:hint="치킨값"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/DeleteOutput5"
                        android:layout_width="39dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/basicxbtn"
                        android:visibility="gone" />
                </TableRow>

            </TableLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>